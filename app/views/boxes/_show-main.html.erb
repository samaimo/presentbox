<div class="post">
  <!--画像-->
  <div class="box-show-image-wrap">
    <%= image_tag @box.image, class: "box-show-image" %>
  </div>
  <div class="post-box-wrap">
    <p>名前</p>
    <p>誕生日</p>
    <% if @box.birth_day.present? %>
      <br>
    <% end %>

    <p>所属</p>
    <p>記念日</p>
    <p>好きなもの</p>
    <p>苦手なもの</p>
  </div>

  <div class="post-box-wrap2">
    <!--名前-->
    <p><%= @box.box_name %></p>

    <!--誕生日-->
    <p>
      <% if @box.birth_day.present? %>
        <div class="birth-age">
          <div id="birth-date">
            <%= @box.birth_day.strftime("%Y年 %-m月 %-d日") %>
          </div>
          <!-- 年齢と月齢の表示 -->
          <div id="age-and-months" class="age">(年齢を表示する)</div>
        </div>
      <% else %>
        未設定です
      <% end %>
    </p>
    <!--所属・職業・特徴-->
    <p>
      <% if @box.occupation.present? %>
        <%= @box.occupation %>
      <% else %>
        未設定です
      <% end %>
    </p>
    <!--記念日-->
    <p>
      <% if @box.anniversary_day.present? %>
          <p>
            <%= @box.anniversary_day.strftime("%Y年 %-m月 %-d日") %>
          </p>  
        </ul>
      <% else %>
        未設定です
      <% end %>
    </p>

    <!--好きなもの-->
    <p>
      <% if @box.likes.present? %>
        <%= @box.likes %>
      <% else %>
        未設定です
      <% end %>
    </p>
    <!--苦手なもの-->
    <p>
      <% if @box.dislikes.present? %>
        <%= @box.dislikes %>
      <% else %>
        未設定です
      <% end %>
    
    </p>
  </div>
</div>
