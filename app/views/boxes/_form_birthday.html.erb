<%= form_with(model: @box, local: true) do |f| %>
  <div class='input-birth-wrap'>
    <%= raw sprintf(
                f.date_select(
                  :birth_day,
                  class: 'select-birth',
                  id: 'birth-day',
                  use_month_numbers: true,
                  prompt: '--',
                  start_year: 1930,
                  end_year: Time.now.year,
                  date_separator: '%s'
                ),
                "<p> 年 </p>",
                "<p> 月 </p>"
              ) + "<p> 日 </p>" %>
  </div>
<% end %>
