<%= render 'shared/header' %>
<!--メイン-->
<main>
  <div class="contents-wrap">
    <div class="left-side">

    </div>

    <div class="center">
      <!--メイン表示-->
      <%= render 'index_main' %>

      <!--投稿一覧-->
        <div class="post-index-grid">
          <% if @presents.any? %>
            <% @presents.each do |present| %>
              <% if present.image.attached? %>
                <%= link_to present_path(present.id) do %>
                  <div class="post-image-wrap">
                    <%= image_tag present.image, class:"post-index-image", id:"show" %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% else %>
            <!-- プレゼントが登録されていない場合の処理 -->
            <div class="post-image-wrap">
              <%= image_tag "samplebox.jpg", class: "post-index-image", id: "show", alt: "サンプル画像" %>
            </div>
          <% end %>
        </div>

    </div>

    <div class="right-side">
      <!--投稿ボタン-->
      <a class="purchase-btn" href="/presents/new">
        <span class="purchase-btn-text">キロク</span>
        <span class="purchase-btn-text-small">する</span>
        <%= image_tag "addpresent.png", class:"purchase-btn-icon" %>
      </a>
    </div>
  </div>
</main>
