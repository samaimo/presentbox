  <%#= render 'shared/error_messages', model: f.object %>

  <div class="form-group1">
    <div class="select-dear">
      <div class='form-text-wrap'>
        <label class="form-text">プレゼントを贈りたい相手は誰ですか？</label>
        <span class="required">必須</span>
      </div>
        <%= f.collection_select(:box_id, Box.all, :id, :box_name,{include_blank: true }, {class: 'form-control'}) %>
    </div>
  </div>

  <div class="form-group2">
    <div class='form-text-wrap'>
      <label class="present-title-text">イベントタイトル</label>
      <span class="required">必須</span>
      <!--<p class="title-text">プレゼントしたいイベント名や目的、その時の気持ちなどを一つ入力してください。</p>-->
    </div>
      <%= f.text_area :title, class:"input-default", placeholder:"例) 20歳の誕生日プレゼント", maxlength:"40" %>
    
  </div>


    <%# プレゼント画像 %>
    <div class="form-group3">
      <div class="form-text">
        画像選択
        <span class="required">必須</span>
      </div>
      <p>
            クリックしてファイルをアップロード
          </p>
      <div id="previews">
        <!-- 既存の画像のプレビュー -->
        <% if @present.image.attached? %>
          <%= image_tag url_for(@present.image), class: "box-show-image", id: "image-preview", data: { imageUrl: url_for(@present.image) } %>
        <% end %>
        <div class="click-upload">
          <%= f.file_field :image, id:"box-image" %>
        </div>
      </div>
    </div>


    <div class="form-group4">
      <div class='form-text-wrap'>
        <label class="form-text">プレゼント</label>
        <span class="required">必須</span>
      </div>
      <%= f.text_area :present_name, class:"input-default", placeholder:"例) タラバガニ詰め合わせ" %>
    </div>
    <div class="form-group11">
      <label class="form-text">日付</label>
      <%= render 'form_eventdate' %>
    </div>

    <div class="form-group5">
      <div class='form-text-wrap'>
        <label class="form-text">キャプション</label>
      </div>
      <%= f.text_area :text, class:"input-caption",
       placeholder:"例) 未だかつてないほど新鮮な東北産タラバガニ。海産物が好きだと聞いたので選んでみました。" %>
    </div>

    <div class="form-group6">
      <div class='form-text-wrap'>
        <label class="form-text">message</label>
      </div>
      <%= f.text_area :message, class:"input-caption", id:"message", placeholder:"例) 喜んでくれますように！ " %>
    </div>

    <div class="form-group7">
      <div class='form-text-wrap'>
        <label class="form-text">shop</label>
      </div>
      <%= f.text_area :shop, class:"input-default", placeholder:"例) shopname.here" %>
    </div>

    <div class="form-group8">
      <div class='form-text-wrap'>
        <label class="form-text">shopURL</label>
      </div>
      <%= f.text_area :url, class:"input-default", placeholder:"例) http:// " %>
    </div>
    <!--金額-->
    <div class="form-group9">
      <div class='form-text-wrap'>
        <label class="form-text">price</label>
      </div>
      <%= f.text_area :price, class:"input-default", placeholder:"例) 10000" %>
    </div>


    <div class="form-group10">
      <div class='form-text-wrap'>
        <label class="form-text">memo</label>
      </div>
      <%= f.text_area :memo, class:"input-caption", id:"memo", placeholder:"例) 築地のおじちゃんがいい人だった。 " %>
    </div>



